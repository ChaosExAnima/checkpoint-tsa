package gameOptions{	  	import gameOptions.CPSlider;	import soundManager.SoundManager;	import flash.display.MovieClip;	import flash.display.Stage;	import flash.events.MouseEvent;		public class MusicSlider extends CPSlider    {		var m_sndMgr:SoundManager;				public function MusicSlider(aStage:Stage, aSndMgr:SoundManager, sliderMC:MovieClip)		{			super(aStage, sliderMC);						m_sndMgr = aSndMgr;					SLIDER_MIN_X = 123;			SLIDER_MAX_X = 219;						m_sliderMC.sliderMarker.addEventListener(MouseEvent.MOUSE_OVER, sliderMarkerOnMouseOver);			m_sliderMC.sliderMarker.addEventListener(MouseEvent.MOUSE_MOVE, sliderMarkerMouseMove);						m_sliderMC.addEventListener(MouseEvent.MOUSE_OVER, sliderOnMouseOver);			m_sliderMC.addEventListener(MouseEvent.MOUSE_OUT, sliderOnMouseOut);						setSliderVal(m_sndMgr.getMusicVolume());		}				public function sliderMarkerMouseMove(event:MouseEvent)		{			m_sndMgr.setMusicVolume(getSliderVal());		}				public function sliderMarkerOnMouseOver(event:MouseEvent)		{			this.m_sliderMC.gotoAndStop(2);		}				public function sliderOnMouseOver(event:MouseEvent)		{			this.m_sliderMC.gotoAndStop(2);		}				public function sliderOnMouseOut(event:MouseEvent)		{			this.m_sliderMC.gotoAndStop(1);		}			}}