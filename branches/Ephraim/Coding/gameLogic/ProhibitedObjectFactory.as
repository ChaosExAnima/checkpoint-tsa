package gameLogic {	public class ProhibitedObjectFactory {			//This stores all the kinds of possible prohibited objects	private static var kindOfObjs:Array = ["knife", "gun", "bomb", "drugs"];	//This stores the probability of a passenger carrying the various prohibited objects in respective order. Must add up to 1!	private static var probabilityOfObjs:Array = [0.3, 0.1, 0.1, 0.5]; //Number		//POST: According to probabilityOfObjs this function returns a prohibited object	public static function createProhibitedObject():ProhibitedObject {		var dice:Number = Math.random();				if(dice<probabilityOfObjs[0]) return new Knife();		else if(dice<probabilityOfObjs[0]+probabilityOfObjs[1]) return new Gun();		else if(dice<probabilityOfObjs[0]+probabilityOfObjs[1]+probabilityOfObjs[2]) return new Bomb();		else return new Drugs();	}		}}